<% provide(:title, "Log in") %>
<center>
			<div class="row">
			<div class="small-6">
				<div class="small-5 columns">
		   	</div>
		   	<div class="small-10 columns">
		   		<h1>Log In</h1>
		   	</div>
		  </div>
	  </div>

  <%= form_for(:session, url: sessions_path, method: 'POST') do |f| %>

		<div class="row">
			<div class="small-6">
				<div class="small-3 columns">
		    	<label for="right-label" class="right"><%= f.label :email %> </label>
		   	</div>
		   	<div class="small-9 columns">
		   		<%= f.text_field :email %>
		   	</div>
		  </div>
	  </div>




		<div class="row">
			<div class="small-6">
				<div class="small-3 columns">
		    	<label for="right-label" class="right"><%= f.label :password %> </label>
		   	</div>
		   	<div class="small-9 columns">
		   		<%= f.password_field :password %>
		   	</div>
		  </div>
	  </div>
	  

		<div class="row collapse">
			<div class="small-9 small-offset-2 columns">
	    	<%= f.submit "Sign in", class: 'button' %>
	    </div>
	  </div>

  <% end %>
 </center>
